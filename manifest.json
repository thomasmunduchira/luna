{
  "manifest_version": 2,
  "name": "Luna",
  "description": "Make yourself more productive!",
  "version": "0.1",
  "author": "Octobits",
  "permissions": ["tabs", "identity", "webNavigation", "bookmarks", "downloads", "sessions", "contextMenus", "tts"],
  "options_page": "public/initialize.html",
  "background" : {
    "scripts": ["libs/jquery-3.1.0.min.js", "background.js"]
  },
  "browser_action": {
    "default_icon": "images/mic-slash.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["libs/jquery-3.1.0.min.js", "actions.js", "parse.js"]
    }
  ]
}
